<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cz.cvut.uhlirad1.homemyo.AddActivity"
    android:stretchColumns="1">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:layout_column="0"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="15dp"
                android:textStyle="bold"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_column="1"
                android:hint="optional"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Room"
                android:layout_column="0"
                android:gravity="center_horizontal|right"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerRoom"
                android:layout_column="1"
                android:spinnerMode="dropdown"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Command"
                android:layout_column="0"
                android:gravity="center_horizontal|right"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCommand"
                android:layout_column="1"
                android:spinnerMode="dropdown"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gesture no. 1"
                android:layout_column="0"
                android:gravity="right"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGesture1"
                android:layout_column="1"
                android:spinnerMode="dropdown"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gesture no. 2"
                android:layout_column="0"
                android:gravity="right"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/spinnerGesture2"
                android:layout_column="1"
                android:spinnerMode="dropdown"
                android:layout_gravity="center_vertical"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gesture no. 3"
                android:layout_column="0"
                android:gravity="right"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGesture3"
                android:layout_column="1"
                android:spinnerMode="dropdown"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btnSave"
                android:layout_column="0"
                />
    </TableRow>
</TableLayout>
