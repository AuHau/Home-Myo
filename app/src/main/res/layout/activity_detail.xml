<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cz.cvut.uhlirad1.homemyo.DetailActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Command"
            android:id="@+id/label_command"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/label_command"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:id="@+id/separator1"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:id="@+id/tableLayout">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    style="@style/AppTheme.Detail.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name:"
                    android:layout_column="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/commandName"
                    android:layout_column="1"
                    android:layout_span="1"
                    android:padding="3dp"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    style="@style/AppTheme.Detail.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Address:"
                    android:layout_column="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/commandAddress"
                    android:layout_column="1"
                    android:layout_span="1"
                    android:padding="3dp"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    style="@style/AppTheme.Detail.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Element type:"
                    android:layout_column="0"
                    />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/commandType"
                        android:layout_column="1"
                        android:padding="3dp"/>

                <!--<ImageView-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:id="@+id/commandTypeIcon"-->
                        <!--android:layout_column="2"-->
                        <!--android:src="@drawable/ic_center"/>-->



        </TableRow>
    </TableLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gestures"
            android:id="@+id/label_gestures"
            android:layout_below="@+id/tableLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>


    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/label_gestures"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:id="@+id/separator2"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/separator2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:id="@+id/gesturesContainer">

        <TableRow
                android:paddingBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/gestNumber1"
                    android:layout_column="0"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="3dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gestIcon1"
                    android:layout_column="1"
                    android:padding="3dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/gestName1"
                    android:layout_column="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
        </TableRow>
        <TableRow
                android:paddingBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/gestNumber2"
                    android:layout_column="0"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="3dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gestIcon2"
                    android:layout_column="1"
                    android:padding="3dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/gestName2"
                    android:layout_column="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
        </TableRow>
        <TableRow
                android:paddingBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/gestNumber3"
                    android:layout_column="0"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="3dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gestIcon3"
                    android:layout_column="1"
                    android:padding="3dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/gestName3"
                    android:layout_column="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
